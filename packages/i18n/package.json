{
  "name": "@boilerstone/i18n",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./store": "./src/i18n-store.ts",
    "./config": "./src/i18n-config.ts",
    "./utils": "./src/i18n-utils.ts",
    "./instance": "./src/i18n-instance.ts",
    "./cookies": "./src/i18n-cookies.ts"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",

  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./store": {
        "types": "./dist/i18n-store.d.ts",
        "import": "./dist/i18n-store.js",
        "require": "./dist/i18n-store.js",
        "default": "./dist/i18n-store.js"
      },
      "./config": {
        "types": "./dist/i18n-config.d.ts",
        "import": "./dist/i18n-config.js",
        "require": "./dist/i18n-config.js",
        "default": "./dist/i18n-config.js"
      },
      "./utils": {
        "types": "./dist/i18n-utils.d.ts",
        "import": "./dist/i18n-utils.js",
        "require": "./dist/i18n-utils.js",
        "default": "./dist/i18n-utils.js"
      },
      "./instance": {
        "types": "./dist/i18n-instance.d.ts",
        "import": "./dist/i18n-instance.js",
        "require": "./dist/i18n-instance.js",
        "default": "./dist/i18n-instance.js"
      },
      "./cookies": {
        "types": "./dist/i18n-cookies.d.ts",
        "import": "./dist/i18n-cookies.js",
        "require": "./dist/i18n-cookies.js",
        "default": "./dist/i18n-cookies.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "check-translations": "tsx ./src/i18n-sync.ts"
  },
  "dependencies": {
    "glob": "^13.0.0",
    "i18next": "catalog:frontend",
    "persist-and-sync": "^1.2.3",
    "react-i18next": "catalog:frontend"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "catalog:build",
    "@types/react": "catalog:frontend",
    "@types/react-dom": "catalog:frontend",
    "tsx": "^4.21.0",
    "typescript": "catalog:build"
  }
}
