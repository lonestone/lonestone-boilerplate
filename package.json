{
  "name": "lonestone",
  "version": "1.0.0",
  "description": "Monorepo for Lonestone project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- pnpm --parallel dev",
    "build": "dotenv -e .env -- pnpm -r build",
    "typecheck": "dotenv -e .env -- pnpm -r typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "with-env": "dotenv -e .env -- pnpm",
    "with-env-test": "dotenv -e .env.test -- pnpm",
    "lint": "eslint --flag unstable_config_lookup_from_file .",
    "generate": "pnpm --filter=@lonestone/openapi-generator run generate",
    "test": "pnpm -r test",
    "schematics:module": "pnpm --filter=@lonestone/schematics run schematics:module"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "22.14.0",
    "pnpm": "10.5.0"
  },
  "packageManager": "pnpm@10.5.0",
  "dependencies": {
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "eslint": "^9.22.0",
    "globals": "^16.0.0"
  }
}