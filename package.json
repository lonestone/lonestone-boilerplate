{
  "name": "lonestone",
  "version": "1.0.0",
  "description": "Monorepo for Lonestone project",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "dotenv -e .env -- pnpm --parallel --filter=* run dev",
    "build": "pnpm --parallel --filter=* run build",
    "lint": "pnpm --parallel --filter=* run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.8.2"
  }
}
