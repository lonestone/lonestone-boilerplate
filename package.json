{
  "name": "lonestone",
  "version": "1.0.0",
  "description": "Monorepo for Lonestone project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- pnpm --parallel --filter=* run dev",
    "build": "dotenv -e .env -- pnpm --parallel --filter=* run build",
    "typecheck": "dotenv -e .env -- pnpm --filter=* run typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "dotenv": "dotenv -e .env -- pnpm",
    "dotenv:test": "dotenv -e .env.test -- pnpm",
    "lint": "eslint --flag unstable_config_lookup_from_file .",
    "generate": "dotenv -e .env -- pnpm --filter=@lonestone/openapi-generator run generate",
    "test": "dotenv -e .env -- pnpm --filter=* run test",
    "test:e2e": "dotenv -e .env.test -- pnpm --filter=* run test:e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "22.14.0",
    "pnpm": "10.6.3"
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "eslint": "^9.22.0",
    "globals": "^16.0.0"
  }
}
