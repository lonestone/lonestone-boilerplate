{
  "name": "boilerstone",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.3",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalogs": {
      "frontend": {
        "@hookform/resolvers": "^5.2.2",
        "@react-router/dev": "^7.13.0",
        "@react-router/node": "^7.13.0",
        "@react-router/serve": "^7.13.0",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@tanstack/react-query": "^5.90.20",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "i18next": "^25.8.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-hook-form": "^7.71.1",
        "react-i18next": "^16.5.4",
        "react-router": "^7.13.0",
        "react-router-devtools": "^6.2.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "tailwindcss-animate": "^1.0.7"
      },
      "auth": {
        "@better-auth/expo": "^1.4.6",
        "better-auth": "^1.4.18"
      },
      "build": {
        "@types/node": "^25.1.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-tsconfig-paths": "^6.0.5"
      },
      "validation": {
        "zod": "~4.3.6",
        "zod-openapi": "5.4.6"
      }
    }
  },
  "description": "Monorepo for Lonestone project",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "engines": {
    "node": "24.13.0",
    "bun": "1.3.3"
  },
  "scripts": {
    "dev": "bun run --parallel --filter '*' dev",
    "build": "bun run -r build",
    "typecheck": "bun run -r typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "generate": "bun run --filter=@boilerstone/openapi-generator generate",
    "test": "bun run -r test",
    "schematics:module": "bun run --filter=@boilerstone/schematics schematics:module",
    "docs-only": "bun run --filter=@boilerstone/documentation dev",
    "prepare": "husky"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@eslint-react/eslint-plugin": "^2.8.1",
    "better-auth": "^1.4.18",
    "enquirer": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0"
  }
}
