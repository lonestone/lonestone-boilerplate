{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@/*": ["./app/*"],
    }
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
