{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@/*": ["./app/*"]
    },
    // Required types for Vite (https://vite.dev/guide/features.html#client-types)
    "types": ["vite/client", "node"],
    "outDir": "./dist"
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
